  <script>
    function activeStatus() {
      $('li.status').addClass("active");
      $('li.lastn').removeClass("active");
      $('#status').show();
      $('#lastn').hide();
    }

    function activeLastn() {
      $('li.status').removeClass("active");
      $('li.lastn').addClass("active");
      $('#status').hide();
      $('#lastn').show();
    }
  </script>
