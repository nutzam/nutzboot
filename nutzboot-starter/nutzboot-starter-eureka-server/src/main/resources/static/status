<script>
  $(function () {
    $.getJSON('./js/status.json', function (data) {
      new Vue({
        el: 'nav',
        data: {home: data.basePath + 'status.html'}
      });
      new Vue({
        el: '#content',
        data: data
      });
    });
  });
